<Application x:Class="MyStatWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyStatWpf">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="PrimaryBootstrapper"></local:Bootstrapper>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/Controls.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Helpers.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Colors.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
